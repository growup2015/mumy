<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="base_view">
        <item name="android:padding">@dimen/common_padding</item>
    </style>

    <style name="share_title" parent="@style/base_view">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="share_price" parent="@style/base_view">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/share_price_color</item>
    </style>

    <style name="share_price_change" parent="@style/base_view">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="share_note" parent="@style/base_view">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/text_muted</item>
    </style>

    <style name="card_overflow">
        <item name="android:background">@drawable/card_menu_button_rounded_overflow</item>
        <item name="android:layout_marginRight">@dimen/card_overflow_margin_right</item>
    </style>

    <style name="card_list">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">@dimen/common_padding</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:background">@drawable/main_background</item>
        <item name="android:listSelector">@drawable/mym_list_selector_holo_light</item>
    </style>

    <style name="market_status" parent="@style/base_view">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/solid_white</item>
    </style>

    <style name="timer" parent="@style/base_view">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="account">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="empty" parent="@style/base_view">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="question_card">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/double_common_padding</item>
        <item name="android:background">@drawable/question_card</item>
    </style>

    <style name="answer_grid" parent="@style/card_list">
        <item name="android:numColumns">@integer/grid_column</item>
        <item name="android:horizontalSpacing">@dimen/double_common_padding</item>
        <item name="android:verticalSpacing">@dimen/double_common_padding</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="option">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/navmenu_bg</item>
        <item name="android:padding">@dimen/double_common_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="answer">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/double_common_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="normal" parent="@style/base_view">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/status_background</item>
    </style>

    <style name="large" parent="@style/base_view">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="message" parent="@style/market_status">
        <item name="android:gravity">center</item>
    </style>

    <style name="dialog_title" parent="@style/large">
        <item name="android:singleLine">true</item>
    </style>

    <style name="help_title" parent="@style/base_view">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/status_background</item>
    </style>

    <style name="help_message" parent="@style/base_view">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/text_muted</item>
        <item name="android:background">@drawable/card</item>
    </style>

    <style name="rank">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/navmenu_bg</item>
        <item name="android:padding">@dimen/double_common_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="info">
        <item name="android:paddingLeft">@dimen/common_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/share_positive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="leader_status" parent="@style/base_view">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/status_background</item>
    </style>

    <style name="news_content">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/text_muted</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/double_common_padding</item>
    </style>

    <style name="news_title" parent="@style/base_view">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="card_list_clickable" parent="@style/card_list">
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="news_title_details" parent="@style/base_view">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/status_background</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="common_image_view">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="date_time" parent="@style/base_view">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/text_muted</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">right</item>
    </style>

</resources>